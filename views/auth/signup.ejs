<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/main.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/color.css">
    <link rel="stylesheet" href="/public/css/responsive.css">
</head>

<body>
    <div class="them-layout">
        <div class="container-fluid pdng0">
            <div class="row merged">
                <div class="offset-md-3 col-md-6">
                    <div class="login-reg-bg">
                        <div class="log-reg-area sign">
                            <h2 class="log-title">Signup</h2>
                            <form onsubmit="return doRagister(this)">
                                <div class="form-group">
                                    <input type="text" required name="name">
                                    <label for="control-lable">Full Name</label>
                                    <i class="mtrl-select"></i>

                                </div>
                                <div class="form-group">
                                    <input type="text" required name="username">
                                    <label for="control-lable">User Name</label>
                                    <i class="mtrl-select"></i>

                                </div>

                                <div class="form-group">
                                    <input type="email" required name="email">
                                    <label for="control-lable">Email</label>
                                    <i class="mtrl-select"></i>

                                </div>
                                <div class="form-group">
                                    <input type="password" required name="password">
                                    <label for="control-lable">Password</label>
                                    <i class="mtrl-select"></i>

                                </div>
                                <div class="form-radio">
                                    <div class="radio">
                                        <label for="">
                                            <input type="radio" name="gender" value="Male" checked />
                                            <i class="check-box"></i>Male
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label for="">
                                            <input type="radio" name="gender" value="Femail" />
                                            <i class="check-box"></i>FeMale
                                        </label>
                                    </div>


                                </div>

                                <a href="/login">Alrady Have a Account</a>
                                <div class="submit-btns">
                                    <button class="mtr-btn signup" name="submit" type="submit">
                                        <span>Ragister</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        function doRagister(form) {
            form.submit.setAttribute("disabled", "disabled")
            form.submit.innerHTML = "<span>Loading....</span>"
            var ajax = new XMLHttpRequest();
            ajax.open("POST", '/signup', true);
            ajax.onreadystatechange = function () {
                console.log(this.status)
                if (this.readyState == 4 && this.status == 201) {
                    console.log('hello')
                    form.submit.removeAttribute("disabled");
                    form.submit.innerHTML = "<span>Ragister</span>"

                    var response = JSON.parse(this.responseText);
                    console.log(this.responseText)
                    console.log(this)
                    alert(response.message)
                    console.log(response)
                    if (response.status == 'success') {
                        window.location.href = "/login"
                    }
                }
            };
            ajax.send(new FormData(form))
            return false
        }
    </script>
</body>

</html>